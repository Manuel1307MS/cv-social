---
import { profile } from "../data/profile/profile-data.json";
const { name, rol, image, siteUrl } = profile;
import "../assets/styles/Colores.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{name}</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={`Portfolio de ${name}`} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph -->
    <meta property="og:title" content={`Portfolio de ${name}`} />
    <meta property="og:description" content={rol} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:type" content="website" />

    <!-- Scripts -->
    <script src="/scripts/social-share.js" defer></script>
    <script src="/scripts/clipboard-copy-email.js" defer></script>
    <script src="/scripts/navigation-menu.js" defer></script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Reset general */
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Body y html */
  html,
  body {
    min-height: 100vh;
    font-family: system-ui, sans-serif;
    line-height: 1.5;
    background-color: var(--color-background-secondary);
    color: var(--color-text, #000);
    -webkit-font-smoothing: antialiased;
    text-rendering: optimizeLegibility;
    padding: 0;
    scroll-behavior: smooth;
    scrollbar-gutter: stable;
  }

  /* Textos comunes */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  span,
  strong,
  em,
  address,
  blockquote,
  figcaption,
  time {
    margin: 0;
    padding: 0;
    font-weight: inherit;
    font-style: normal;
    font-size: 1rem; /* Tamaño uniforme para todos los elementos */
    color: var(--color-primary);
  }

  /* Listas */
  ul,
  ol {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  /* Enlaces */
  a {
    text-decoration: none;
    color: inherit;
  }

  /* Imágenes y multimedia */
  img,
  picture,
  video,
  canvas {
    display: block;
    max-width: 100%;
    height: auto;
  }

  /* Formularios */
  input,
  button,
  textarea,
  select {
    font: inherit;
    color: inherit;
    background: none;
    border: none;
    outline: none;
  }

  button {
    cursor: pointer;
  }

  /* Tables */
  table {
    border-collapse: collapse;
    border-spacing: 0;
  }

  /* Code blocks */
  pre,
  code {
    font-family: monospace, monospace;
    font-size: 1em;
  }

  /*aside*/
  aside {
    margin: 0;
    padding: 0;
    border: none;
    background: none;
  }

  /*svg*/
  svg {
    margin: 0;
    padding: 0;
  }
</style>
