---
import AstroPill from "../pills/AstroPill.astro";
import CSSPill from "../pills/CSSPill.astro";
import HTMLPill from "../pills/HTMLPill.astro";
import JavaPill from "../pills/JavaPill.astro";
import JavaScriptPill from "../pills/JavaScriptPill.astro";
import MySQLPill from "../pills/MySQLPill.astro";
import ReactPill from "../pills/ReactPill.astro";
import SpringPill from "../pills/SpringPill.astro";
---

<article class="technologies-card">
  <header>
    <h1>Tecnolog√≠as</h1>
  </header>
  <section class="technologies-list">
    <JavaPill />
    <SpringPill />
    <MySQLPill />
    <HTMLPill />
    <CSSPill />
    <JavaScriptPill />
    <ReactPill />
    <AstroPill />
  </section>
</article>

<style>
  .technologies-card {
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: var(--color-background-primary);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);

    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1rem;

    padding: 1rem;
  }

  h1 {
    font-weight: bold;
  }

  .technologies-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
</style>
