---
import HeartIcon from "../icons/social/HeartIcon.astro";
import SendIcon from "../icons/social/SendIcon.astro";
import VerifiedIcon from "../icons/general/VerifiedIcon.astro";

const { title, timeInit, timeEnd, description, category } = Astro.props;
---

<article data-category={category} class="social-card">
  <header>
    <h1>{title} <VerifiedIcon /></h1>
    <div class="time">
      <time datetime={timeInit}>{timeInit}</time>
      {
        timeEnd ? (
          <>
            <span>-</span>
            <time datetime={timeEnd}>{timeEnd}</time>
          </>
        ) : null
      }
    </div>
  </header>
  <section class="container-card">
    <slot />
  </section>
  <footer class="footer-card">
    <div class="footer-social">
      <HeartIcon />
      <SendIcon />
    </div>
    <p>{description}</p>
  </footer>
</article>

<style>
  .social-card {
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: var(--color-background-primary);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    padding: 1rem;

    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .container-card {
    width: 100%;
    max-width: 600px;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  header {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  h1 {
    font-weight: bold;
  }

  .time {
    margin-left: auto;
  }

  .footer-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-social {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 1rem;
  }
</style>
