---
import { interests } from "../../data/profile/profile-data.json";
---

<article class="interests-card">
  <header>
    <h1>Intereses</h1>
  </header>
  <section>
    <div class="interests-list">
      {interests.map((interest) => <span>{interest}</span>)}
    </div>
  </section>
</article>

<style>
  .interests-card {
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: var(--color-background-primary);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);

    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1rem;

    padding: 1rem;
  }

  h1 {
    font-weight: bold;
  }

  .interests-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  span {
    border: 2px solid #0a66c2;
    border-radius: 1rem;
    padding-left: 10px;
    padding-right: 10px;
    background-color: rgba(10, 102, 194, 0.2);
  }
</style>
